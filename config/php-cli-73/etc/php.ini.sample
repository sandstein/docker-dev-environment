#
# Use these settings for debugging
#
xdebug.remote_enable=1
xdebug.remote_port=9000
xdebug.idekey=XDEBUG_SESSION_START
# On macOs and Windows use "host.docker.internal" for automatic host ip detection
xdebug.remote_host=172.18.0.1
# xdebug.remote_host="host.docker.internal"

#
# Use this for Magento2
#
memory_limit=512M

#
# Logging
#
# Enable error logging
log_errors=1
# Write xdebug remote log to docker log
xdebug.remote_log=/proc/self/fd/2
