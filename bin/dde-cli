#!/usr/bin/env bash

#
# sets common variables for all scripts
#
MY_PATH=`dirname $(readlink -f "$0")`
set -a
. $MY_PATH/dde-defines
set +a

if [[ -n ${PHP_CLI_CONTAINER} ]]; then
    if [[ -n $1 ]]; then
        touch ${DOCKER_DEV_ENVIRONMENT_HOME}/conf/${PHP_CLI_CONTAINER}/etc/php.ini
        docker-compose  -f ${DOCKER_DEV_ENVIRONMENT_HOME}/docker-compose.yml run -u ${USER_ID} -w /var/www/vhosts/${PROJECT_ROOT} ${PHP_CLI_CONTAINER} "$@"
    else
        echo "No command given, usage: $0 <command>"
    fi
else
    echo "No PHP_CLI_CONTAINER set, please do so in your projects .env file"
fi
